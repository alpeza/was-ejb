<?xml version="1.0" encoding="UTF-8"?>
<!-- Descriptor EJB-JAR para un Bean de Mensajes (MDB) -->
<ejb-jar id="ejb-jar_ID" version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <!-- Nombre a mostrar para el EJB-JAR -->
    <display-name>MDB</display-name>
    <!-- Definición de Enterprise Beans -->
    <enterprise-beans>
        <!-- Bean de Mensajes (MDB) -->
        <message-driven id="q.dec.1.mdb">
            <!-- Nombre a mostrar para el MDB -->
            <display-name>q.dec.1.mdb</display-name>
            <!-- Nombre EJB para el MDB -->
            <ejb-name>q.dec.1.mdb</ejb-name>
            <!-- Clase que implementa el MDB -->
            <ejb-class>es.lacaixa.dec.messaging.MessageReceiver</ejb-class>
            <!-- Tipo de mensajería para el MDB (MessageListener en este caso) -->
            <messaging-type>javax.jms.MessageListener</messaging-type>
            <!-- Tipo de transacción para el MDB (Container-managed en este caso) -->
            <transaction-type>Container</transaction-type>
            <!-- Configuración de Activación para el MDB -->
            <activation-config>
                <activation-config-property>
                    <activation-config-property-name>destinationType</activation-config-property-name>
                    <activation-config-property-value>javax.jms.Queue</activation-config-property-value>
                </activation-config-property>
                <activation-config-property>
                    <activation-config-property-name>acknowledgeMode</activation-config-property-name>
                    <activation-config-property-value>Auto-acknowledge</activation-config-property-value>
                </activation-config-property>
            </activation-config>
            <!-- Entradas de entorno para el MDB -->
            <env-entry>
                <description>Nombre del archivo de configuración del Journal Recorder</description>
                <env-entry-name>dec.configFileName</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>${config.file.name}${path.entorno}dec-recorder-config.xml</env-entry-value>
            </env-entry>
            <env-entry>
                <description>Nombre de la cola del Journal Recorder</description>
                <env-entry-name>dec.queueName</env-entry-name>
                <env-entry-type>java.lang.String</env-entry-type>
                <env-entry-value>q.dec.1</env-entry-value>
            </env-entry>
            <!-- Referencia a Recurso para el MDB -->
            <resource-ref id="q.dec.1.mdb.ds">
                <res-ref-name>jdbc/DECCAX</res-ref-name>
                <res-type>javax.sql.DataSource</res-type>
                <res-auth>Application</res-auth>
            </resource-ref>
        </message-driven>
    </enterprise-beans>
    <!-- Descriptores de ensamblaje para el EJB-JAR -->
    <assembly-descriptor>
        <!-- Transacciones gestionadas por el contenedor -->
        <container-transaction>
            <!-- Configuración de transacciones para el método onMessage de q.dec.1.mdb -->
            <method>
                <ejb-name>q.dec.1.mdb</ejb-name>
                <method-name>onMessage</method-name>
                <method-params>
                    <method-param>javax.jms.Message</method-param>
                </method-params>
            </method>
            <!-- Atributo de transacción (Requerido en este caso) -->
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
    </assembly-descriptor>
</ejb-jar>
